@model Flight

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FlightID" />
            <div class="form-group">
                <label asp-for="AirlineID" class="control-label"></label>
                <select asp-for="AirlineID" class="form-control" asp-items="ViewBag.AirlineID"></select>
                <span asp-validation-for="AirlineID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureAirportID" class="control-label"></label>
                <select asp-for="DepartureAirportID" class="form-control" asp-items="ViewBag.DepartureAirportID"></select>
                <span asp-validation-for="DepartureAirportID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalAirportID" class="control-label"></label>
                <select asp-for="ArrivalAirportID" class="form-control" asp-items="ViewBag.ArrivalAirportID"></select>
                <span asp-validation-for="ArrivalAirportID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureDateTime" class="control-label"></label>
                <input asp-for="DepartureDateTime" class="form-control" />
                <span asp-validation-for="DepartureDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalDateTime" class="control-label"></label>
                <input asp-for="ArrivalDateTime" class="form-control" />
                <span asp-validation-for="ArrivalDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatCapacity" class="control-label"></label>
                <input asp-for="SeatCapacity" class="form-control" />
                <span asp-validation-for="SeatCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsStatus" /> @Html.DisplayNameFor(model => model.IsStatus)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
